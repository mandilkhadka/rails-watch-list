<h2 class=m-4 ><%= @list.name %></h2>
<%= link_to "Go to see all your lists", root_path, class: "btn btn-primary m-2" %>
<%= link_to "Add a bookmark", new_list_bookmark_path(@list), class: "btn btn-primary m-2"  %>
<div class="container">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card" style="width: 18rem;">
      <%= image_tag bookmark.movie.poster_url %>
      <div class="card-body">
        <h5 class="card-title"><%= bookmark.movie.title %></h5>
        <p class="card-text"><%= bookmark.movie.overview %></p>
        <h3 class=m-4 >üìù<%= bookmark.comment %></h3>
        <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-outline-danger" %>
      <% end %>
    </div>
  </div>
</div>



<div class="container">
  <h1><%= @list.name %></h1>
  <%= link_to "back to lists", lists_path %>
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card-product my-2">
      <%= image_tag bookmark.movie.poster_url, alt: bookmark.movie.title %>
      <div class="card-product-infos">
        <h2><%= bookmark.movie.title %> - ‚≠êÔ∏è <%= bookmark.movie.rating %></h2>
        <p><%= bookmark.movie.overview %></p>
        <div class="d-flex justify-content-between">
          <p><i class="fa-solid fa-comment"></i><em><%= bookmark.comment %></em></p>
          <%= link_to list_bookmark_path(@list, bookmark), { data: { turbo_method: :delete, turbo_confirm: 'ok?' }} do %>
            <i class="fa-solid fa-trash"></i>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
  <p class="text-center">
    <%= link_to new_list_bookmark_path(@list) do %><i class="fa-solid fa-circle-plus"></i><% end %>
  </p>
</div>
