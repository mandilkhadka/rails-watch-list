<h1>Index page</h1>
<% @lists.each do |list| %>
<%= link_to list_path(list) do  %>
  <h5 class="card-title"><%= list.name %></h5>
  <div class="card-body">
    <% if list.photo.attached? %>
      <%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill%>
    <% else %>
      <%= image_tag 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPQDYau3Hs4-xw1i8jVSUY4BlF4FLmg8lQqg&usqp=CAU', height: 300, width: 400, crop: :fill%>
    <% end %>
  <% end %>
  <% end %>

  <%= link_to "Add a list", new_list_path,  class: "btn btn-primary m-2" %>


<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://image.pollinations.ai/prompt/wagon-movie-list);">
  <div class="container">
    <h1>Le Wagon Movie list!</h1>
  </div>
</div>
<div class="container mt-3">
  <div class="cards">
    <% @lists.each do |list| %>
      <%= link_to list_path(list) do  %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://image.pollinations.ai/prompt/<%= list.name %>-movie);">
          <%= list.name %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
